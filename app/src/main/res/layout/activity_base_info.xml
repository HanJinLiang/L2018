<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_bg"
    android:id="@+id/layout_root_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/divider_line_1"
    android:showDividers="middle"
    android:padding="@dimen/l_10dp">

    <com.hanjinliang.l2018.ui.customer.RoundImageView
        android:id="@+id/headerImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bg_2018"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_50dp"
        android:src="@drawable/bg_2018"
        android:text="13524051358"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/headerImage"/>

    <TextView
        android:id="@+id/id_info_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_50dp"
        android:src="@drawable/bg_2018"
        android:text="设置姓名"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/headerImage"/>

</LinearLayout>